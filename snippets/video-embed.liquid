{% comment %} Setup YouTube embed Url {% endcomment %}

{% if video_url %}
	{% assign embed_url_params =  video_url | split: '?' | last | split: '&' %}
	{% for param in embed_url_params %}
		{% assign key = param | split: '=' | first %}
		{% assign value = param | split: '=' | last %}
		{% if key == 'v' %}
			{% assign embed_url = '//www.youtube.com/embed/' | append: value %} 	
			<iframe width="100%" height="315" src="{{ embed_url }}" frameborder="0" allowfullscreen></iframe>
		{% endif %}				   
	{% endfor %}
{% endif %}