{% assign products = collections['models'].products %}

<table class="table table-striped table-hover table-bordered table-responsive">
	<thead class="thead-inverse">
		<tr>
			<th>Model</th>
			{% for product in products %}
				<th>
					{% if product.metafields.c_f.short_name %}
						{{ product.metafields.c_f.short_name }}
					{% else %}
						{{ product.title }}
					{% endif %}
				</th>
			{% endfor %}
		</tr>
	</thead>
	<tbody>
		<tr>
			<th>Price</th>
			{% for product in products %}
				<td>
					{% if product.price_varies %}{{ 'products.general.from' | t }}{% endif %}
						{{ product.price | money }}
					{% if on_sale %}
						{% assign sale_price =  product.compare_at_price | money %}
						<br>{{ 'products.product.on_sale_from_html' | t: price: sale_price }}
					{% endif %}
				</td>
			{% endfor %}
		</tr>
		<tr>
			<th>Performance</th>
			{% for product in products %}
				<td>
					{% case product.handle %}
						{% when 'whipit' %}
							Lightest, quickest, butteryest park ski that also rips all mountain
						{% when 'allplay' %}
							Versatile, best of all worlds, equal park &amp; all mountain performance
						{% when 'vacation' %}
							Fattest jib ski for tricks on all terrain groomed to deep pow
						{% when 'metal' %}
							Powderful, stable high speed carving, crud blasting, and deep pow surfing
						{% when 'friend' %}
							Effortlessly surfs pow, still reliable on firm snow
						{% when 'masterblaster' %}
							Quick, nimble, powerful high speed carving, with versatile float in pow
            {% when 'max' %}
               Youth freestyle ski built using the same modern construction and specs as an adult ski
					{% endcase %}
				</td>
			{% endfor %}
		</tr>
		<tr>
			<th>Magazine Test Awards</th>
			{% for product in products %}
				<td>
					{% case product.handle %}
						{% when 'whipit' %}
              Blister
						{% when 'allplay' %}
               Backcountry, Blister, Freeskier, Powder
						{% when 'vacation' %}
               Backcountry, Freeskier, Powder
						{% when 'metal' %}
							Backcountry, Blister, Freeskier, Newschoolers, Powder, SKI, Skiing
						{% when 'friend' %}
							Backcountry, Blister, Freeskier, Powder, SKI, Skiing
						{% when 'masterblaster' %}
							 Blister, Freeskier, Powder, SKI
					{% endcase %}
				</td>
			{% endfor %}
		</tr>
		<tr>
			<th>Terrain</th>
			{% for product in products %}
				<td>
					{% case product.handle %}
						{% when 'whipit' %}
							Park, Groomed
						{% when 'allplay' %}
							Park, Groomed, Powder under 12"
						{% when 'vacation' %}
							Groomed, Deep Powder
						{% when 'metal' %}
							Groomed, Deep Powder
						{% when 'friend' %}
							Bottomless Pow
						{% when 'masterblaster' %}
							Groomed, Bumps, Trees, Up to 10" powder
            {% when 'max' %}
              Park, Groomer, Powder under 12‚Äù
					{% endcase %}
				</td>
			{% endfor %}
		</tr>
		<tr>
			<th>Flex (5 = Stiffest)</th>
			{% for product in products %}
				<td>
					{% case product.handle %}
						{% when 'whipit' %}
							2
						{% when 'allplay' %}
							1
						{% when 'vacation' %}
							3
						{% when 'metal' %}
							4
						{% when 'friend' %}
							4
						{% when 'masterblaster' %}
							4
            {% when 'max' %}
              2
					{% endcase %}
				</td>
			{% endfor %}
		</tr>
		<tr>
			<td>&nbsp;</td>
			{% for product in products %}
				<td><a href="{{ collections[product.handle].url }}" class="btn btn-secondary">View Skis</a></td>
			{% endfor %}
		</tr>
	</tbody>
</table>

