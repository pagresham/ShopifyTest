<!-- /templates/customers/register.liquid -->
{% comment %}Markup based on Timber 2.1.6{% endcomment %}

<div class="container">
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
    <header class="page-header">
      <h1 class="page-title">{{ 'customer.register.title' | t }}</h1>
    </header>
     
      {% form 'create_customer' %}
        {% if form.errors %}
          <div class="bg-danger">          
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <fieldset class="form-group">
          <label class="sr-only" for="FirstName">{{ 'customer.register.first_name' | t }}</label>          
          <input type="text" name="customer[first_name]" id="FirstName" class="form-control" placeholder="{{ 'customer.register.first_name' | t }}" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus>
        </fieldset>
        <fieldset class="form-group">
          <label class="sr-only" for="LastName">{{ 'customer.register.last_name' | t }}</label>          
          <input type="text" name="customer[last_name]" id="LastName" class="form-control" placeholder="{{ 'customer.register.last_name' | t }}" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words">
        </fieldset>
        <fieldset class="form-group {% if form.errors contains 'email' %} has-danger{% endif %}"> 
          <label class="sr-only" for="Email">{{ 'customer.register.email' | t }}</label>          
          <input type="email" name="customer[email]" id="Email" class="form-control" placeholder="{{ 'customer.register.email' | t }}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">
        </fieldset>
        <fieldset class="form-group {% if form.errors contains 'password' %} has-danger{% endif %}">
          <label class="sr-only" for="CreatePassword">{{ 'customer.register.password' | t }}</label>          
          <input type="password" name="customer[password]" id="CreatePassword" class="form-control" placeholder="{{ 'customer.register.password' | t }}">
        </fieldset>
      
        <!-- <fieldset class="form-group">
          <input type="hidden" name="customer[accepts_marketing]" value="" />
          <div class="col-sm-10 col-sm-offset-2">
            <div class="checkbox">
              <label>
                <input type="checkbox" name="customer[accepts_marketing]" checked="checked" />
                Subscribe to stay updated with new products and offers!
              </label>
            </div>
          </div>
        </fieldset> -->

        <div class="form-actions text-xs-center">
            <p><button type="submit" class="btn btn-primary btn-full">{{ 'customer.register.submit' | t }}</button></p>
            <p><a href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a></p>
        </div>
          
        
      {% endform %}
    </div> <!-- .col -->
  </div> <!-- .row -->
</div> <!-- .container -->
